.footer_content_ecosystem_section {
	display: flex;
	flex-direction: column;
	max-width: 202px;
	align-items: flex-start;
	gap: var(--space-xs);
}

.footer_content_ecosystem_title {
	font-family: var(--font-body-medium-family);
	font-size: 0.875rem;
	font-weight: 400;
	line-height: 1.25rem;
	color: var(--color-gray-light-500);
}

.footer_content_ecosystem_socials {
	display: flex;
	flex-direction: row;
	gap: var(--space-xs);
}

@media (--mobile) {
	.footer_content_ecosystem_section {
		max-width: 100%;
		width: 100%;
	}
}
