.chain {
	display: flex;
	flex-direction: row;
	width: 100%;
	align-items: center;
	gap: var(--space-s);
	min-height: 64px;
}

.chain_logo {
	border-radius: var(--border-radius-large);
	width: 64px;
	height: 64px;
}

.chain_name {
	font-family: var(--font-body-medium-family);
	font-size: 1.125rem;
	font-weight: 500;
	line-height: 1.375rem;
	color: var(--color-gray-light-700);
	display: flex;
	align-items: center;
	height: 56px;
}
